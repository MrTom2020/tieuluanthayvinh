<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dangsp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="110dp"
        android:text="Đăng sản phẫm"
        android:textColor="#93cb52"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="43dp"
        android:text="Tên chủ"
        android:textColor="#93cb52" />

    <EditText
        android:id="@+id/edttenchu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="93dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="#93cb52"/>

    <EditText
        android:id="@+id/edttensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edttenchu"
        android:layout_marginStart="51dp"
        android:layout_marginTop="54dp"
        android:layout_toEndOf="@+id/textView15"
        android:background="#93cb52"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="62dp"
        android:text="Tên sản phẫm"
        android:textColor="#93cb52"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="54dp"
        android:text="Giá bán"
        android:textColor="#93cb52"/>

    <EditText
        android:id="@+id/edtgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edttensp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/textView16"
        android:background="#93cb52"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="52dp"
        android:text="Đăng hình"
        android:textColor="#93cb52" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="179dp"
        android:layout_height="117dp"
        android:layout_below="@+id/danhmucsp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/textView17"
        android:background="@drawable/prod3" />

    <Button
        android:id="@+id/btndy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="51dp"
        android:text="Đồng ý và thoát ra"
        android:textColor="#93cb52"/>

    <Button
        android:id="@+id/btneexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtslg"
        android:layout_marginStart="72dp"
        android:layout_marginTop="81dp"
        android:layout_toEndOf="@+id/btndy"
        android:text="Thoát"
        android:textColor="#93cb52" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="53dp"
        android:text="Danh mục"
        android:textColor="#93cb52"/>

    <Spinner
        android:id="@+id/danhmucsp"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtgb"
        android:layout_marginStart="85dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/textView18"
        android:background="#93cb52"></Spinner>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="52dp"
        android:text="Số lượng"
        android:textColor="#93cb52" />

    <EditText
        android:id="@+id/edtslg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtkt"
        android:layout_marginStart="95dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/textView19"
        android:ems="10"
        android:inputType="number"
        android:background="#93cb52"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="85dp"
        android:text="Màu sắc"
        android:textColor="#93cb52" />

    <EditText
        android:id="@+id/edtmau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="99dp"
        android:layout_marginTop="53dp"
        android:layout_toEndOf="@+id/textView20"
        android:background="#93cb52"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="42dp"
        android:text="Kích thước"
        android:textColor="#93cb52" />

    <EditText
        android:id="@+id/edtkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtmau"
        android:layout_marginStart="83dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/textView21"
        android:ems="10"
        android:inputType="number"
        android:background="#93cb52"/>
</RelativeLayout>
</ScrollView>