<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dangsp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="110dp"
        android:text="Đăng sản phẫm"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="56dp"
        android:text="Tên chủ" />

    <EditText
        android:id="@+id/edttenchu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="93dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edttensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edttenchu"
        android:layout_marginStart="51dp"
        android:layout_marginTop="37dp"
        android:layout_toEndOf="@+id/textView15"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="62dp"
        android:text="Tên sản phẫm" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="54dp"
        android:text="Giá bán" />

    <EditText
        android:id="@+id/edtgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edttensp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/textView16"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="73dp"
        android:text="Đăng hình" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="179dp"
        android:layout_height="117dp"
        android:layout_below="@+id/danhmucsp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/textView17"
        android:background="@drawable/prod3" />

    <Button
        android:id="@+id/btndy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="51dp"
        android:text="Đồng ý" />

    <Button
        android:id="@+id/btneexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtslg"
        android:layout_marginStart="70dp"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/btndy"
        android:text="Thoát" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="53dp"
        android:text="Danh mục" />

    <Spinner
        android:id="@+id/danhmucsp"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtgb"
        android:layout_marginStart="84dp"
        android:layout_marginTop="39dp"
        android:layout_toEndOf="@+id/textView18"></Spinner>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="52dp"
        android:text="Số lượng" />

    <EditText
        android:id="@+id/edtslg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtkt"
        android:layout_marginStart="95dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/textView19"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="98dp"
        android:text="Màu sắc" />

    <EditText
        android:id="@+id/edtmau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="99dp"
        android:layout_marginTop="31dp"
        android:layout_toEndOf="@+id/textView20"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="65dp"
        android:text="Kích thước" />

    <EditText
        android:id="@+id/edtkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtmau"
        android:layout_marginStart="83dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/textView21"
        android:ems="10"
        android:inputType="number" />
</RelativeLayout>
</ScrollView>