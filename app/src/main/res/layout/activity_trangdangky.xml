<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mau3">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trangdangky"
    android:background="@color/mau3">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="26dp"
        android:text="ĐĂNG KÝ TÀI KHOẢN"
        android:textSize="30dp"
        android:textColor="@color/mau2"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="53dp"
        android:layout_toStartOf="@+id/edtten"
        android:text="Tên tài khoản"
        android:textColor="@color/mau2"/>

    <EditText
        android:id="@+id/edtten"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="36dp"
        android:background="#99cb52"
        android:ems="10"
        android:hint="Đăng nhập email...."
        android:inputType="textEmailSubject" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="56dp"
        android:layout_toStartOf="@+id/edtmk"
        android:text="Mật khẩu"
        android:textColor="@color/mau2"/>

    <EditText
        android:id="@+id/edtmk"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/edtten"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:hint="Mật khẩu đăng nhập"
        android:background="#99cb52"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/txtuser"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="46dp"
        android:layout_toStartOf="@+id/edtdiachi"
        android:text="Địa chỉ"
        android:textColor="@color/mau2"/>

    <EditText
        android:id="@+id/edtdiachi"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/edtmk"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:hint="Thông tin địa chỉ"
        android:background="#99cb52"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtbaner"
        android:layout_width="115dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/txtuser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="53dp"
        android:layout_toStartOf="@+id/editTextDate"
        android:text="Ngày sinh"
        android:textColor="@color/mau2"/>

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/edtdiachi"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:hint="Nhập ngày sinh của bạn"
        android:background="#99cb52"
        android:inputType="date" />

    <Button
        android:id="@+id/btndd"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="64dp"
        android:text="Đồng ý"
        android:background="@color/mau2"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/btnthoat"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="74dp"
        android:text="Thoát"
        android:background="@color/mau2"
        android:textColor="#ffffff"/>
</RelativeLayout>
</ScrollView>